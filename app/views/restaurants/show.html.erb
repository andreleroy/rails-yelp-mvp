<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Category: <%= @restaurant.category %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<% @restaurant.reviews.each do |review| %>
<ul class="list-inline">
  <li>
    <p>Reviews:</p>
  </li>
  <li>
    <p>Date: <%= review.created_at.strftime("%A, %b %d") %></p>
  </li>
  <li>
    <p>Review: <%= review.content %></p>
  </li>
  <li>
    <p>Rating: <%= review.rating %></p>
  </li>
</ul><br>
<% end %>

<%= link_to "Go back to restaurants", restaurants_path, class: "btn btn-primary" %>
<%= link_to "Add a review for this restaurant", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
